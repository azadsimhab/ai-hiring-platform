# AI Hiring Platform Environment Configuration
# Copy this file to .env and update the values

# Application Settings
ENVIRONMENT=development
PROJECT_NAME=AI Hiring Platform API
VERSION=0.1.0
API_V1_STR=/api

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# Database Settings
DATABASE_URL=sqlite:///./hiring_platform.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# AI Service Settings
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
VERTEX_AI_PROJECT_ID=your-vertex-ai-project-id
VERTEX_AI_LOCATION=us-central1

# Google Cloud Services
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket-name
GOOGLE_CLOUD_SECRET_MANAGER_PROJECT_ID=your-secret-manager-project-id

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=[".pdf", ".docx", ".doc", ".txt"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis (for caching and session storage)
REDIS_URL=redis://localhost:6379

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=false 